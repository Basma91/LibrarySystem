@model IEnumerable<LibraryMangmentSystem.Models.BookViewModel>

@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Add New Book", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SerialNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SerialNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @if (item.IsAvailable)
                {
                @Html.ActionLink("Borrow", "Create", "BorrowHistory", new { id = item.BookId }, new { @class = "btn btn-primary" })
            }
            else
            {
                @Html.ActionLink("Return", "Edit", "BorrowHistory", new { id = item.BookId }, new { @class = "btn btn-success" })
            }
        </td>

    </tr>
}

</table>
